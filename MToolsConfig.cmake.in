if(CMAKE_VERSION VERSION_LESS 2.8.13)
    set(${CMAKE_FIND_PACKAGE_NAME}_NOT_FOUND_MESSAGE
        "${CMAKE_FIND_PACKAGE_NAME} requires CMake 3.0.0 or later.")
    set(${CMAKE_FIND_PACKAGE_NAME}_FOUND FALSE)
    return()
endif()

set(${CMAKE_FIND_PACKAGE_NAME}_VERSION @PROJECT_VERSION@)

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

function(MUTANT_ADD_HANDLES OUTPUT_FILES)
endfunction()

# Mark the CMake package as FOUND.
set(${CMAKE_FIND_PACKAGE_NAME}_FOUND TRUE)
